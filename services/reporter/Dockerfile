FROM node:10.14

# -------------------------------------------------------------------------------------
# Default Environment Variables
# -------------------------------------------------------------------------------------
ENV NODE_ENV production

ENV REP_APP_HOME /opt/parser
ENV REP_USER parser

# -------------------------------------------------------------------------------------
# Setup OS
# -------------------------------------------------------------------------------------
RUN set -x \
  && apt-get update \
  && rm -rf /var/lib/apt/lists/*

# -------------------------------------------------------------------------------------
# Create user
# -------------------------------------------------------------------------------------
RUN mkdir -p ${REP_APP_HOME} \
  && useradd -d "${REP_APP_HOME}" -c "Collector" -s /usr/sbin/nologin "${REP_USER}" \
  && chown --recursive -v ${REP_USER}:${REP_USER} ${REP_APP_HOME}

# -------------------------------------------------------------------------------------
# Set the working directory
# -------------------------------------------------------------------------------------
WORKDIR ${REP_APP_HOME}

# -------------------------------------------------------------------------------------
# Copy the package.json and npm-shrinkwrap.json files and install dependencies
# -------------------------------------------------------------------------------------
COPY package.json npm-shrinkwrap.json ./
RUN npm install

# -------------------------------------------------------------------------------------
# Copy the application files
# -------------------------------------------------------------------------------------
COPY ./bin   ./

# -------------------------------------------------------------------------------------
# Setup application user
# -------------------------------------------------------------------------------------
USER ${REP_USER}

# -------------------------------------------------------------------------------------
# Expose application port number
# -------------------------------------------------------------------------------------
EXPOSE 3000

# -------------------------------------------------------------------------------------
# Launch Doiex Reporter Service
# -------------------------------------------------------------------------------------
CMD ["node", "app.js"]
